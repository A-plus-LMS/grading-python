#!/bin/sh

title=""
points=0
skip=0
while [ -z "${1%%-*}" ]; do
    case "$1" in
        -t|-n) title=$2 ;;
        -p) points=$2 ;;
        -s|-e) skip=$2 ;;
        --) shift ; break ;;
        *)
            echo "ERROR: Invalid option $1" >&2
            echo "usage: $0 [-t title] [-p points_on_success] [-s skip] prog arg1 arg2..." >&2
            exit 64
            ;;
    esac
    shift 2
done

exec testcase -t "$title" -p "$points" -s "$skip" -- \
     python3 -m unittest -- "$@"
